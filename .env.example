# Lightning Bolt credentials
LB_USERNAME=your_email@example.com
LB_PASSWORD=your_password

# The text of the organization/view link to click in the LB sidebar after login
# Must match a substring of the link text (case-sensitive)
# If unset, the first available view link is clicked as a fallback
LB_VIEW_NAME=BSW Hospital Medicine - Dallas

# Your local timezone (used for conflict detection and shift comparisons)
# Must be a valid IANA timezone name: https://en.wikipedia.org/wiki/List_of_tz_database_time_zones
LOCAL_TIMEZONE=America/Chicago

# Regex pattern to identify your own name in the schedule (used to detect picked-up shifts)
# Case-insensitive — supports alternation for nicknames, e.g. "(john|jonathan)\s+doe"
MY_NAME_PATTERN=(john|jonathan)\s+doe

# Lightning Bolt iCal subscription URL (for your personal shifts)
LB_ICAL_URL=https://lblite.lightning-bolt.com/ical/your-feed-url

# Google Calendar Service Account
# 1. Go to https://console.cloud.google.com/
# 2. Create a project and enable the Google Calendar API
# 3. Go to IAM & Admin > Service Accounts > Create Service Account
# 4. Create a key (JSON type) and download it
# 5. Paste the entire JSON contents below (single line) or set as a GitHub secret
# 6. Share your Google Calendar with the service account email
#    (found in the JSON as "client_email") — give it "Make changes to events" permission
GOOGLE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"...","private_key":"...","client_email":"...@...iam.gserviceaccount.com",...}

# Google Calendar ID to add open shifts to
# Find this in Google Calendar Settings > your calendar > "Calendar ID"
# For your primary calendar it looks like: your_email@gmail.com
GOOGLE_CALENDAR_ID=your_email@gmail.com

# =============================================================================
# NOTIFICATIONS
# =============================================================================

# Enable email notifications for sync failures and warnings (true/false, default: false)
NOTIFY_ENABLED=false

# Email address to send notifications to
NOTIFY_EMAIL=your_email@example.com

# SMTP server settings
# Gmail example: SMTP_HOST=smtp.gmail.com, SMTP_PORT=587, use an App Password for SMTP_PASSWORD
# Port 587 uses STARTTLS (default); port 465 uses SSL
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# =============================================================================
# SYNC OPTIONS
# =============================================================================

# Keep shifts on the calendar once they've started (ongoing or completed)
# Useful for payroll verification — prevents in-progress and worked shifts from being removed
# When false (default), past/ongoing shifts are removed from the calendar on the next sync
KEEP_PAST_SHIFTS=false

# Which shift types to sync to Google Calendar (true/false)
SYNC_OPEN_SHIFTS=true        # Available open shifts
SYNC_PICKED_SHIFTS=true      # Shifts you've picked up
SYNC_SCHEDULED_SHIFTS=true   # Your regular scheduled shifts from iCal

# Comma-separated list of iCal shift labels to exclude from Google Calendar sync
# These still count for conflict detection (e.g. vacation days block open shifts)
# Case-insensitive — e.g. "Vacation" matches "vacation", "VACATION", etc.
EXCLUDED_SHIFT_LABELS=Vacation

# Minimum rest hours between shifts (for conflict filtering)
# Open shifts within this many hours of your scheduled/picked shifts will be filtered out
MIN_REST_HOURS=8

# iCal lookahead window in days (how far ahead to fetch your schedule)
ICAL_LOOKAHEAD_DAYS=180

# =============================================================================
# CALENDAR COLORS (Google Calendar color IDs)
# =============================================================================
# 1=Lavender, 2=Sage, 3=Grape, 4=Flamingo, 5=Banana,
# 6=Tangerine, 7=Peacock, 8=Graphite, 9=Blueberry, 10=Basil, 11=Tomato

OPEN_SHIFT_COLOR=2        # Sage (green) for available open shifts
PICKED_SHIFT_COLOR=9      # Blueberry (blue) for picked-up shifts
SCHEDULED_SHIFT_COLOR=3   # Grape (purple) for regular scheduled shifts
